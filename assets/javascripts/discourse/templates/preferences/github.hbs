<div class="control-group github-username">
  <label class="control-label" for="edit-github-username">{{i18n
      "discourse_github_verification.username"
    }}</label>
  <div class="controls">
    {{#if this.githubUsername}}
      <div class="github-username-control-wrapper">
        <GithubUserLink @username={{this.githubUsername}} />
        <DButton
          @action={{action this.clear}}
          @class="btn-secondary clear-github-verification-btn"
          @icon="trash-alt"
          @title="discourse_github_verification.clear"
        />
      </div>
      <p class="instructions">{{i18n
          "discourse_github_verification.instructions.clear"
        }}</p>
    {{else}}
      {{!  <div>  }}
      {{!  </div>  }}
      <DButton
        @action={{action this.login}}
        @icon="fab-github"
        @class="btn-primary github-verification-btn"
        @label="discourse_github_verification.connect"
      />
      <p class="instructions">{{i18n
          "discourse_github_verification.instructions.connect"
        }}</p>
    {{/if}}
  </div>
</div>